<!DOCTYPE html>
<html>
    {{> head}}
  <body>
    {{> navbar}}
    {{> header}}
    <form method="post" action="contact/send">
      <div class="form-group">
        <label for="nameField">Name</label>
        <input type="text" class="form-control" id="nameField" placeholder="Enter your name" name="name">
      </div>
      <div class="form-group">
        <label for="emailField">Email address</label>
        <input type="email" class="form-control" id="emailField" placeholder="Enter email" name="email">
      </div>
      <div class="form-group">
        <label for="messageField">Message</label>
        <textarea class="form-control" id="messageField" placeholder="Enter message" name="message" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    {{> footer}}
  </body>
</html>
